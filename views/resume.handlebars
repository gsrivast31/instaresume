<!-- Main (Home) section -->
<div class="section" id="home">
	<div class="container" id="home-container">

		<div class="row">
			<div class="col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1 text-center">	
				<h1 class="title">InstaResume</h1>
				<form id="msform">
					<!-- progressbar -->
					<ul id="progressbar">
						<li class="active">About</li>
						<li>Experience</li>
						<li>Education</li>
						<li>Skills</li>
						<li>Projects</li>
						<li>Awards</li>
						<li>Design</li>
					</ul>
					<!-- fieldsets -->
					<fieldset>
						<ul>
							<li><label>Name</label><input type="text" name="name" placeholder="E.g. John Smith" value="{{user.name}}" /><li>
							<li><label>Bio</label><input type="text" name="bio" placeholder="E.g. Describe yourself" value="{{user.bio}}" /><li>
							<li>
								<label>Date of Birth</label>
								<select id="dob_days">
									{{{daySelect user.dob.day}}}
								</select>
								<select id="dob_months">
									{{{monthSelect user.dob.month}}}
								</select>
								<input type="text" name="dob_year" id="dob_year" placeholder="Year" value="{{user.dob.year}}" />
							</li>

							<br>
							<li><label>Phone</label><input type="text" name="phone" placeholder="E.g. (91) xxx-xxx-xxxx" value="{{user.phone}}"/><li>
							<li><label>Address</label><input type="text" name="address" placeholder="E.g. 1234 New Delhi, India" value="{{user.address}}" /><li>
							<li><label>Email</label><input type="text" name="email" placeholder="E.g. abc@xyz.com" value="{{user.email}}" /><li>
							<li><label>Website</label><input type="text" name="website" placeholder="E.g. http://instaresume.com" value="{{user.website}}" /><li>
							<li><label>Twitter</label><input type="text" name="pf-twitter" placeholder="E.g. @instaresume" value="{{user.twitter_url}}"/><li>
							<li><label>Facebook</label><input type="text" name="pf-facebook" placeholder="E.g. instaresume" value="{{user.facebook}}" /><li>
							<li><label>LinkedIn</label><input type="text" name="pf-linkedin" placeholder="E.g. instaresume" value="{{user.linkedin_url}}"/><li>
							<li><label>GitHub</label><input type="text" name="pf-github" placeholder="E.g. instaresume" value="{{user.github_url}}" /><li>
						</ul>
						
						<input type="button" name="next" class="next action-button" value="Next" />
					</fieldset>
					<fieldset>
						<div class="employment">
							{{#each user.employment}}
							{{> employment}}
							{{/each}}
						</div>
						<input type="button" name="add" class="add add-employer" value="Add New Employer" /><br>
						<input type="button" name="previous" class="previous action-button" value="Previous" />
						<input type="button" name="next" class="next action-button" value="Next" />
					</fieldset>
					<fieldset>
						<div class="education">
							{{#each user.education}}
							{{> education}}
							{{/each}}
						</div>
						<input type="button" name="add" class="add add-degree" value="Add New Degree" /><br>
						<input type="button" name="previous" class="previous action-button" value="Previous" />
						<input type="button" name="next" class="next action-button" value="Next" />
					</fieldset>
					<fieldset>
						<div class="skills">
							{{#each user.skills}}
							{{> skill}}
							{{/each}}
						</div>
						<input type="button" name="add" class="add add-skill" value="Add New Skill" /><br>
						<input type="button" name="previous" class="previous action-button" value="Previous" />
						<input type="button" name="next" class="next action-button" value="Next" />
					</fieldset>
					<fieldset>
						<div class="projects">
							{{#each user.projects}}
							{{> project}}
							{{/each}}
						</div>
						<!-- <a class="btn btn-social btn-github" href="/auth/github"><i class="fa fa-github"></i>Pull from GitHub</a><br> -->
						<input type="button" name="add" class="add add-project" value="Add New Project" /><br>
						<input type="button" name="previous" class="previous action-button" value="Previous" />
						<input type="button" name="next" class="next action-button" value="Next" />
					</fieldset>
					<fieldset>
						<div class="awards">
							{{#each user.awards}}
							{{> award}}
							{{/each}}
						</div>
						<input type="button" name="add" class="add add-award" value="Add New Award" /><br>
						<input type="button" name="previous" class="previous action-button" value="Previous" />
						<input type="button" name="next" class="next action-button" value="Next" />
					</fieldset>
					<fieldset>
						<input type="button" name="previous" class="previous action-button" value="Previous" />
						<input type="submit" name="submit" class="submit action-button" value="Submit" />
					</fieldset>
				</form>
			</div> <!-- /col -->
		</div> <!-- /row -->

	</div>
</div>

<div id="contact">
	<div class="container">
		<span><p class="copyright text-muted text-center small">&copy; 2014 InstaResume. All Rights Reserved</p></span>
	</div>
</div>

